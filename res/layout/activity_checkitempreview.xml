<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normol"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/bg_white" >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/title_icon_height"
            android:layout_height="@dimen/title_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_settings_ethernet_black_48dp" />

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/default_title"
            android:textColor="@color/font_black"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/title_icon_height"
            android:layout_height="@dimen/title_icon_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_settings_ethernet_black_48dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/border_title" />
    </RelativeLayout>

    <!-- 列表 -->

    <ListView
        android:id="@+id/lv_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bg_normol"
        android:dividerHeight="10px" >
    </ListView>

</LinearLayout>